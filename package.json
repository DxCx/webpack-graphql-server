{
  "name": "webpack-graphql-server",
  "version": "0.2.1",
  "description": "Starter kit for apollo GraphQL server using webpack and typescript",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:notify": "npm run test:watch -- --notify",
    "coverage": "npm test -- --coverage",
    "coverage:notify": "npm run coverage -- --watch --notify",
    "start": "npm run build && node dist/main.js",
    "start:watch": "concurrently \"npm run build:watch\" \"nodemon dist/main.js\"",
    "preupver": "npm test",
    "upver": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DxCx/webpack-apollo-server.git"
  },
  "keywords": [
    "apollo",
    "backend",
    "apollo-server",
    "typescript",
    "webpack",
    "graphql",
    "graphiql",
    "express"
  ],
  "author": "Hagai Cohen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DxCx/webpack-apollo-server/issues"
  },
  "homepage": "https://github.com/DxCx/webpack-apollo-server#readme",
  "dependencies": {
    "@types/body-parser": "1.16.7",
    "@types/cors": "2.8.1",
    "@types/express": "^4.0.39",
    "@types/helmet": "0.0.37",
    "@types/morgan": "^1.7.35",
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "0.11.7",
    "graphql-schema-tools": "^0.0.6",
    "helmet": "^3.9.0",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/graphql": "^0.11.5",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "awesome-typescript-loader": "^3.3.0",
    "concurrently": "^3.5.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "nodemon": "^1.12.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.6.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
